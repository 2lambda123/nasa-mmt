<div class="row row-content">
  <section>
    <%= form_tag(send("#{resource_name}_path", get_resource), method: :put, id: 'umm_form', class: 'umm-form') do %>
      <%= render partial: 'form', locals: { resource: get_resource, json_form: @json_form, current_form: @current_form } %>
    <% end %>
  </section>
</div>

<script>
  // Load json-schema for field validation
  var globalJsonSchema = <%= raw @schema.parsed_json.to_json %>;

  $(document).ready(function() {
    $("#umm_form").validate()
  })

  //Setup Science Keywords
  setupScienceKeywords(<%= raw @science_keywords.to_json %>);
</script>