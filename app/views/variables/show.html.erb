<% content_for :header_title do %>
  <h2><%= display_entry_id(@variable, 'variable') %></h2>
  <p class="subtitle"><%= display_header_subtitle(@variable, 'variable') %></p>
<% end %>

<% if @user_permissions == 'none' %>
  <div class="eui-banner--danger">
    <p class="eui-banner__message">
      <%= "You don't have the appropriate permissions to #{@variable_action} this variable." %>
    </p>
  </div>
  <div class="no-access">
    <h3 class="access-title">Access Denied</h3>
    <p class="access-message">
      It appears you do not have access to <%= @variable_action %> this content.<br />
      If you feel you should have access, please check with your provider manager or ensure you are logged into the correct provider.
    </p>
  </div>
<% elsif @user_permissions == 'wrong_provider' %>
  <div class="eui-banner--warn">
    <p class="eui-banner__message">
      <%= link_to("You need to change your current provider to #{@variable_action} this variable. Click here to change your provider.",
        "#", id: "change-current-provider-banner-link",
        data: { "provider": @provider_id, action_link: "change-provider-#{@variable_action}-variable" }) %>
    </p>
    <%= render_change_provider_variable_action_link(@variable_action, @concept_id, @revision_id) %>
  </div>
<% end %>

<div class="row row-content">
  <section class="action">
    <p>
      <% if current_provider?(@provider_id) %>
        <%= link_to 'Edit Variable Record', edit_variable_path(revision_id: @revision_id), class: 'eui-btn--link' %>
      <% elsif available_provider?(@provider_id) %>
        <%= link_to 'Edit Variable Record', '#not-current-provider-modal', class: 'display-modal not-current-provider', data: { 'provider': @provider_id, record_action: 'edit-variable' } %> |
      <% end %>

      <% if current_provider?(@provider_id) %>
        <%= link_to 'Delete Variable Record', "#delete-record-modal", class: 'display-modal delete-variable eui-btn--link space-right' %>
      <% elsif available_provider?(@provider_id) %>
        <%= link_to 'Delete Variable Record', '#not-current-provider-modal', class: 'display-modal not-current-provider', data: { 'provider': @provider_id, record_action: 'delete-variable' } %>
      <% end %>
      
      <% if current_provider?(@provider_id) %>
        <%= link_to 'Manage Collection Associations', variable_collection_associations_path(@concept_id), class: 'eui-btn--link' %>
      <% elsif available_provider?(@provider_id) %>
        <%= link_to 'Manage Collection Associations', '#not-current-provider-modal', class: 'display-modal not-current-provider', data: { 'provider': @provider_id, record_action: 'delete-variable' } %>
      <% end %>

      <div id="delete-record-modal" class="eui-modal-content">
        <a href="javascript:void(0);" class="modal-close float-r"><i class="fa fa-times"></i><span class="is-invisible">Close</span></a>
        <p>Are you sure you want to delete this variable record?</p>
        <p>
          <a href="javascript:void(0)" class="eui-btn modal-close">No</a>
          <%= link_to 'Yes', variable_path, method: :delete, class: 'eui-btn--blue spinner' %>
        </p>
      </div>
      <%= render partial: 'shared/not_current_provider_modal', locals: {
        options: { variable: @variable, concept_id: @concept_id, revision_id: @revision_id }
      } %>
    </p>
  </section>

  <div class="content">
    <% @json_form.forms.each do |form| %>
      <section class="umm-preview <%= form.parsed_json['id'] %>">
        <div class="preview-variable eui-accordion">
          <div class="eui-accordion__header">
            <h4 class="eui-accordion__title"><%= form.title %></h4>
            <div class="eui-accordion__icon" tabindex="0">
              <i class="eui-icon eui-fa-chevron-circle-down"></i>
              <span class="eui-sr-only">Toggle <%= form.title %></span>
            </div>
          </div>
          <div class="eui-accordion__body">
            <% form.elements.each do |element| %>
              <div id="<%= element.idify_property_name(element.parsed_json) %>_preview" class="umm-preview-field-container">
                <h5><%= element.title %></h5>

                <% if element.value? %>
                  <%= element.render_preview %>
                <% else %>
                  <p class="empty-section">No value for <%= element.title %> provided.</p>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </section>
    <% end %>
  </div>
</div>
