<div class="row row-content">
  <section>
    <h2><%= current_user.provider_id %> Bulk Updates</h2>

    <table class="bulk-updates-list-table">
      <thead>
        <tr>
          <th>Task ID</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% if @tasks.blank? %>
          <tr>
            <td colspan="2">No tasks found</td>
          </tr>
        <% else %>
          <% @tasks.each do |task| %>
            <tr>
              <td><%= link_to task['task-id'], bulk_update_path(task['task-id']) %></td>
              <td><%= task['status'] %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </section>
</div>
